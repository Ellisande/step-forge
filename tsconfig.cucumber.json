{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "moduleDetection": "force"
  },
  "include": ["features/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "src/vite-env.d.ts"]
}
