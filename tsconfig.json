{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/types",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "node"],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "composite": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "node_modules", "test/**", ".history/**", "dist"]
}
