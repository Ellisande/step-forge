{
  "name": "@step-forge/step-forge",
  "version": "0.0.6",
  "module": "./dist/step-forge.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/step-forge.js"
    },
    "./dist/": {
      "import": "./dist/"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rimraf build/**/* && rimraf dist/**/* && tsc && rolldown -c && dts-bundle-generator --config ./dts-bundle-generator.config.cjs && copyfiles -u 1 \"dist/**/*\" build && copyfiles package.json build",
    "test:cucumber": "NODE_ENV=test NODE_OPTIONS=\"--experimental-specifier-resolution=node --loader ts-node/esm\" TS_NODE_PROJECT=./tsconfig.cucumber.json cucumber-js -p default",
    "test:ci": "NODE_ENV=test NODE_OPTIONS=\"--experimental-specifier-resolution=node --loader ts-node/esm\" TS_NODE_PROJECT=./tsconfig.cucumber.json cucumber-js -p ci",
    "test": "NODE_ENV=test PORT=7888 LOG_LEVEL=none NODE_OPTIONS=\"--experimental-specifier-resolution=node --loader ts-node/esm\" TS_NODE_PROJECT=./tsconfig.cucumber.json cucumber-js -p all 2> /dev/null",
    "test:debug": "NODE_ENV=test PORT=7888 NODE_OPTIONS=\"--experimental-specifier-resolution=node --loader ts-node/esm\" TS_NODE_PROJECT=./tsconfig.cucumber.json cucumber-js -p all",
    "lint": "eslint . --ext .ts",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@cucumber/pretty-formatter": "^1.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "copyfiles": "^2.4.1",
    "dts-bundle-generator": "^9.5.1",
    "earl": "^1.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "rolldown": "^1.0.0-rc.3",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "lodash": "^4.17.21"
  }
}
